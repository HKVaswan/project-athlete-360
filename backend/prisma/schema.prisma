// ENUMS
enum Role {
  admin
  coach
  athlete
}

enum Severity {
  minor
  moderate
  severe
}

enum AttendanceStatus {
  present
  absent
  late
}

enum InviteStatus {
  pending
  accepted
  revoked
  expired
}

enum ResourceVisibility {
  private
  institution
  public
}