# ---------------------------------------------------------------------------
# üß† Project Athlete 360 ‚Äî Horizontal Pod Autoscaler (HPA)
# ---------------------------------------------------------------------------
# Purpose:
#  - Dynamically scales pods based on CPU, memory, and custom metrics.
#  - Integrates with Prometheus Adapter for advanced scaling.
#  - Maintains resilience and SLA compliance under high traffic.
# ---------------------------------------------------------------------------

apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: pa360-api-hpa
  namespace: pa360
  labels:
    app: pa360-api
    tier: backend
    environment: production
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: pa360-api

  # üí° Auto-scaling range
  minReplicas: 2
  maxReplicas: 15

  # üöÄ Triggers for scale-up/down
  metrics:
    # 1Ô∏è‚É£ CPU-based scaling
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 65

    # 2Ô∏è‚É£ Memory-based scaling
    - type: Resource
      resource:
        name: memory
        target:
          type: Utilization
          averageUtilization: 75

    # 3Ô∏è‚É£ Custom app-level metrics (via Prometheus Adapter)
    - type: Pods
      pods:
        metric:
          name: http_requests_per_second
        target:
          type: AverageValue
          averageValue: "50"

  # ‚öôÔ∏è Scaling behavior: balance speed and stability
  behavior:
    scaleUp:
      stabilizationWindowSeconds: 30
      selectPolicy: Max
      policies:
        - type: Percent
          value: 100
          periodSeconds: 30
        - type: Pods
          value: 4
          periodSeconds: 30
    scaleDown:
      stabilizationWindowSeconds: 60
      selectPolicy: Min
      policies:
        - type: Percent
          value: 50
          periodSeconds: 60

---
# ---------------------------------------------------------------------------
# üß© Worker HPA (Queue Processing)
# ---------------------------------------------------------------------------

apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: pa360-worker-hpa
  namespace: pa360
  labels:
    app: pa360-worker
    tier: background
    environment: production
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: pa360-worker

  minReplicas: 1
  maxReplicas: 10

  metrics:
    # CPU scaling
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 70

    # Queue backlog scaling (via Prometheus metric `queue_jobs_waiting`)
    - type: Pods
      pods:
        metric:
          name: queue_jobs_waiting
        target:
          type: AverageValue
          averageValue: "20"

  behavior:
    scaleUp:
      stabilizationWindowSeconds: 20
      selectPolicy: Max
      policies:
        - type: Percent
          value: 100
          periodSeconds: 20
    scaleDown:
      stabilizationWindowSeconds: 90
      selectPolicy: Min
      policies:
        - type: Percent
          value: 50
          periodSeconds: 60

---
