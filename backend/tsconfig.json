{
  "compilerOptions": {
    /* ===== Core Settings ===== */
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "rootDir": "src",
    "outDir": "dist",

    /* ===== Type Safety ===== */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    /* ===== Interop & Module Resolution ===== */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* ===== Performance & Stability ===== */
    "skipLibCheck": true,
    "allowJs": false,
    "incremental": true,
    "sourceMap": true,

    /* ===== Environment Types ===== */
    "types": ["node", "express"]
  },
  "include": [
    "src/**/*.ts",
    "prisma/seed.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}