{
  "id": null,
  "uid": "pa360-api-health",
  "title": "API Health Dashboard - Project Athlete 360",
  "tags": ["api", "backend", "pa360", "observability"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "style": "dark",
  "panels": [
    {
      "type": "stat",
      "title": "Total API Requests",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(pa360_http_requests_total)",
          "legendFormat": "All Requests"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "type": "graph",
      "title": "API Request Rate (req/s)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(pa360_http_requests_total[1m])",
          "legendFormat": "{{method}} {{route}}"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 12, "h": 6 },
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "yaxes": [
        { "format": "reqps", "logBase": 1 },
        { "format": "short" }
      ]
    },
    {
      "type": "graph",
      "title": "Request Latency (p95 in seconds)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(pa360_http_request_duration_seconds_bucket[5m])) by (le, route))",
          "legendFormat": "{{route}}"
        }
      ],
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 7 },
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "yaxes": [
        { "format": "s" },
        { "format": "short" }
      ]
    },
    {
      "type": "graph",
      "title": "Error Rate (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "(sum(rate(pa360_http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(pa360_http_requests_total[5m]))) * 100",
          "legendFormat": "5xx errors"
        },
        {
          "expr": "(sum(rate(pa360_http_requests_total{status_code=~\"4..\"}[5m])) / sum(rate(pa360_http_requests_total[5m]))) * 100",
          "legendFormat": "4xx errors"
        }
      ],
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 7 },
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "yaxes": [
        { "format": "percent" },
        { "format": "short" }
      ]
    },
    {
      "type": "table",
      "title": "Top Slow API Routes",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(5, histogram_quantile(0.95, sum(rate(pa360_http_request_duration_seconds_bucket[5m])) by (le, route)))",
          "legendFormat": "{{route}}"
        }
      ],
      "gridPos": { "x": 0, "y": 13, "w": 12, "h": 7 },
      "options": { "showHeader": true }
    },
    {
      "type": "table",
      "title": "Error Breakdown by Route",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(10, sum(rate(pa360_http_requests_total{status_code=~\"5..\"}[5m])) by (route))",
          "legendFormat": "{{route}}"
        }
      ],
      "gridPos": { "x": 12, "y": 13, "w": 12, "h": 7 },
      "options": { "showHeader": true }
    },
    {
      "type": "stat",
      "title": "API Uptime (%) (last 24h)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 - ((sum(rate(pa360_http_requests_total{status_code=~\"5..\"}[24h])) / sum(rate(pa360_http_requests_total[24h]))) * 100)"
        }
      ],
      "gridPos": { "x": 0, "y": 20, "w": 6, "h": 4 },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "color": "red", "value": 0 },
            { "color": "orange", "value": 95 },
            { "color": "green", "value": 99 }
          ]
        }
      }
    },
    {
      "type": "stat",
      "title": "Active Instances",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(up{job=\"pa360-backend\"})"
        }
      ],
      "gridPos": { "x": 6, "y": 20, "w": 6, "h": 4 },
      "options": { "colorMode": "value", "justifyMode": "center" }
    },
    {
      "type": "graph",
      "title": "System CPU & Memory (Backend)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg(pa360_system_cpu_load)",
          "legendFormat": "CPU Load"
        },
        {
          "expr": "avg(pa360_system_memory_usage_bytes) / (1024*1024*1024)",
          "legendFormat": "Memory (GB)"
        }
      ],
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 6 },
      "lines": true,
      "fill": 2,
      "linewidth": 2
    }
  ],
  "templating": {
    "list": [
      {
        "name": "route",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(pa360_http_requests_total, route)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "label": "API Route"
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "1h"]
  }
}